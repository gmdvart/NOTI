<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/noteListFragment">
    <fragment android:id="@+id/noteListFragment"
              android:name="com.example.noteapplication.ui.note_list_screen.NoteListFragment"
              android:label="fragment_note_list" tools:layout="@layout/fragment_note_list">
        <action android:id="@+id/action_noteListFragment_to_noteEditFragment" app:destination="@id/noteEditFragment"/>
    </fragment>
    <fragment android:id="@+id/noteEditFragment"
              android:name="com.example.noteapplication.ui.note_edit_screen.NoteEditFragment"
              android:label="fragment_note_edit" tools:layout="@layout/fragment_note_edit">
        <argument android:name="noteId" app:argType="integer" android:defaultValue="-1"/>
    </fragment>
</navigation>